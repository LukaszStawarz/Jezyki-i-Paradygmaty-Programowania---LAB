%Pole kwadratu
pole_kwadratu(X,A) :- A is X*X.

%Pole ko³a
pole_kola(Promien, Pole) :-
    Pole is pi * Promien * Promien.

%Œrednia arytmetyczna
srednia(X, Y, Srednia) :-
    Srednia is (X + Y) / 2.

figura5:-
    figura(Nazwa, Sciany),
    Sciany =< 5,
    write(Nazwa), nl,
    fail.
